@{
  Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt" data-tilt>
        <img src="~/auth/images/img-01.png" alt="IMG">
      </div>
      <form class="login100-form validate-form" asp-action="Login" asp-controller="Auth" autocomplete="off">
        <div class="wrap-input100 validate-input" data-validate="Username is required">
          <input class="input100" type="text" name="username" placeholder="Username">
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-user" aria-hidden="true"></i>
          </span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <input class="input100" type="password" name="password" placeholder="Password">
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
        </div>
        @{
          if (ViewBag.error != null)
          {
            <p class="text-danger" style="display: list-item; margin-left: 5%">@ViewBag.error</p>
          }
        }
        <div class="container-login100-form-btn">
          <button class="login100-form-btn" type="submit">
            Login
          </button>
        </div>
      </form>
    </div>
  </div>
</div>